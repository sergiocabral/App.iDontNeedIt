generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AccessLog {
  id        String   @id @default(uuid())
  ip        String
  userAgent String
  referrer  String?
  createdAt DateTime @default(now())
}

enum SuggestionType {
  confidenceBoost
  personsName
}

model AiSuggestion {
  id            String         @id @default(uuid())
  type          SuggestionType
  value         String
  locale        String
  reservedUntil DateTime?
  createdAt     DateTime       @default(now())
}